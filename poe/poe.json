{
    "rules": [],
    "conditions": {
        "title": "Pillars of Eternity"
    },
    "commands": [
        ["location", "print(mouse.x(), mouse.y())"],
        ["center mouse", "mouseMove(centerPos())"],
        ["double click", "doubleClick()"],
        ["zoom out", "'-'"],
        ["zoom in", "'='"],
        ["stealth mode", "{alt}"],
        ["focus 1", "focusCharacter(char1())"],
        ["focus 2", "focusCharacter(char2())"],
        ["focus 3", "focusCharacter(char3())"],
        ["pause", "{space}"],
        ["quick save", "{f5}"],
        ["north <digit>_1-", "mouseTo(0, -int($1))"],
        ["northeast <digit>_1-", "mouseTo($1, -int($1))"],
        ["east <digit>_1-", "mouseTo($1, 0)"],
        ["southeast <digit>_1-", "mouseTo($1, $1)"],
        ["south <digit>_1-", "mouseTo(0, $1)"],
        ["southwest <digit>_1-", "mouseTo(-int($1), $1)"],
        ["west <digit>_1-", "mouseTo(-int($1), 0)"],
        ["northwest <digit>_1-", "mouseTo(-int($1), -int($1))"]
    ],
    "functions": [
        ["mouseMove(pos)", "mouse.move(pos[0], pos[1])"],
        ["mouseTo(x, y)", "mouse.move(int(x) * 10, int(y) * 10, False)"],
        ["focusCharacter(pos)", "mouseMove(pos) wait(.3) doubleClick() wait(.3) mouseMove(centerPos())"],
        ["doubleClick()", "mouse.click() wait(.05) mouse.click()"]    ]
}