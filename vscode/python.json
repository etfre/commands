{
    "scope": "vscode",
    "rules": [],
    "conditions": {
        "state": "language == 'python'",
        "title": "Visual Studio Code"
    },
    "commands": [
        [
            "new function",
            "`def ():` repeat({left}, 3)"
        ],
        [
            "new method",
            "`def (self):` repeat({left}, 7)"
        ],
        ["pie import", "import spaceForward()"],
        ["pie dunder", "'____' repeat({left}, 2)"],
        ["pie from", "from spaceForward()"],
        ["pie self", "self"],
        ["pie return", "return spaceForward()"],
        ["pie class", "'class :'{left}"],
        ["pie yield", "yield spaceForward()"],
        ["pie continue", "continue"],
        ["pie break", "break"],
        ["pie with", "with spaceForward()"],
        ["pie true", "True"],
        ["pie false", "False"],
        ["pie if", "`if :` {left}"], 
        ["pie else if", "`elif :` {left}"], 
        ["pie else", "`else:` {enter}"], 
        ["for iterable", "`for  in `clipboard.get(): repeat({left}, text.length(clipboard.get())) repeat({left}, 5)"],
        ["for enumerate", "`for i,  in enumerate(` clipboard.get() `):` repeat({left}, text.length(clipboard.get())) repeat({left}, 16)"]
    ],
    "functions": []
}